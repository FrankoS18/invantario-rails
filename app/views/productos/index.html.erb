<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Categoria</th>
      <th scope="col">Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.categoria %></td>
        <td><%= producto.estado %></td>
        <td><%= link_to 'Ver', producto, class:"link-light" %></td>
        <td><%= link_to 'Modificar', edit_producto_path(producto), class:"link-light" %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete,data: { confirm: 'Are you sure?' }, class:"link-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_producto_path, class:"btn btn-secondary btn-lg link-light" %>
